    <!--卡片模块-->
    <style name="UiCardViewUseBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">0dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <!--水平分规器-->
    <style name="UiDividerH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">?uiDividerColor</item>
        <!--<item name="android:background">@color/divider</item>-->
    </style>
    <!--垂直分规器-->
    <style name="UiDividerV">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?uiDividerColor</item>
        <!--<item name="android:background">@color/divider</item>-->
    </style>

    <!--数据列表item布局-->
    <style name="UiSimpleItemParentLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="UiSimpleItemParentLayoutStyle.H">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="UiSimpleItemParentLayoutStyle.V">
        <item name="android:orientation">vertical</item>
    </style>
    <!--数据列表item标题-->
    <style name="UiSimpleItemTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--数据列表item内容-->
    <style name="UiSimpleItemContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--数据列表item结束样式-->
    <style name="UiSimpleItemEndStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--数据列表item日期-->
    <style name="UiSimpleItemDateStyle" parent="UiSimpleItemEndStyle" />
    <!--数据列表item用户-->
    <style name="UiSimpleItemBottomStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--数据列表item前缀icon-->
    <style name="UiSimpleItemIconPrefixStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">@dimen/ui_style_dp_16</item>
    </style>
    <!--数据列表item前缀Action icon-->
    <style name="UiSimpleItemIconPrefixStyle.Action">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/ui_bg_action_radius_20</item>
        <item name="android:layout_marginStart">@dimen/ui_style_dp_8</item>
    </style>
    <!--数据列表item后缀icon-->
    <style name="UiSimpleItemIconSuffixStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">@dimen/ui_style_dp_16</item>
    </style>
    <!--数据列表item后缀Action icon-->
    <style name="UiSimpleItemIconSuffixStyle.Action">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/ui_bg_action_radius_20</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <!--更多图标 因为此按钮左右边距较大 所以用起来可能要调整-->
    <style name="UiSimpleItemIconMoreStyle" parent="UiSimpleItemIconSuffixStyle">
        <item name="srcCompat">@drawable/ui_ic_more</item>
    </style>
    <!--更多按钮 因为此按钮左右边距较大 所以用起来可能要调整-->
    <style name="UiSimpleItemIconMoreActionStyle" parent="UiSimpleItemIconSuffixStyle.Action">
        <item name="srcCompat">@drawable/ui_ic_more</item>
    </style>

    <!--提交/保存按钮-->
    <style name="UiSimpleActionSubmitTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">@dimen/ui_style_dp_16</item>
        <item name="android:layout_marginTop">@dimen/ui_style_dp_16</item>
        <item name="android:layout_marginEnd">@dimen/ui_style_dp_16</item>
        <item name="android:layout_marginBottom">@dimen/ui_style_dp_16</item>
        <item name="android:background">@drawable/ui_bg_action_color_secondary_2</item>
    </style>

    <!--icon事件按钮-->
    <style name="UiSimpleActionMaterialIconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
    </style>

    <!--对话框输入框-->
    <style name="UiSimpleDialogInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:maxLines">5</item>
        <item name="android:layout_marginTop">@dimen/ui_style_dp_8</item>
        <item name="android:paddingTop">@dimen/ui_style_dp_16</item>
        <item name="android:paddingBottom">@dimen/ui_style_dp_8</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--通用输入框提示信息样式 伪造generalInputLayoutStyle的Label样式-->
    <style name="UiVirtualInputLayoutLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">?android:textColorHint</item>
    </style>

    <!--原生输入布局样式-->
    <style name="UiSimpleTextInputLayout">
        <item name="android:layout_marginTop">@dimen/ui_style_dp_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--通用输入框样式-->
    <style name="UiSimpleTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--通用输入布局样式-->
    <style name="UiSimpleFormLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:minHeight">40dp</item>-->
    </style>

    <!--通用单行输入布局样式-->
    <style name="UiSimpleFormLayoutStyle.H">
        <item name="android:background">@drawable/ui_bg_color_surface</item>
        <item name="android:orientation">horizontal</item>
        <!--<item name="android:minHeight">40dp</item>-->
    </style>
    <!--通用多行输入布局样式-->
    <style name="UiSimpleFormLayoutStyle.V">
        <item name="android:background">@drawable/ui_bg_color_surface</item>
        <item name="android:orientation">vertical</item>
    </style>

