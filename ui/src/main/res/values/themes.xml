<resources xmlns:tools="http://schemas.android.com/tools">
    <!--app主题-->
    <style name="UiAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <!--变体表单样式-->
        <item name="uiFromInputLabelOnColor">?android:attr/textColorPrimary</item>
        <item name="uiFromInputLabelTextSize">16sp</item>
        <item name="uiFromInputEditOnColor">?android:attr/textColorPrimary</item>
        <item name="uiFromInputEditTextSize">16sp</item>
        <item name="uiDividerColor">@color/uiDivider</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="UiAppTheme.DayNight">
        <item name="android:colorBackground">@color/uiColorBackground</item>
    </style>

    <!--app dialogActivity主题-->
    <style name="UiDialogActivityTheme" parent="@style/Theme.MaterialComponents.DayNight.Dialog.Bridge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <!--变体表单样式-->
        <item name="uiFromInputLabelOnColor">?android:attr/textColorPrimary</item>
        <item name="uiFromInputLabelTextSize">16sp</item>
        <item name="uiFromInputEditOnColor">?android:attr/textColorPrimary</item>
        <item name="uiFromInputEditTextSize">16sp</item>
        <item name="uiDividerColor">@color/uiDivider</item>
    </style>

    <style name="UiDialogActivityTheme.DayNight">
        <item name="android:colorBackground">@color/uiColorBackground</item>
    </style>
    <!--布局 start-->

    <!--宽和高都是wrap_content-->
    <style name="WWLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--宽和高都是match_parent-->
    <style name="MMLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--宽是match_parent高是wrap_content-->
    <style name="MWLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--宽是wrap_content高是match_parent-->
    <style name="WMLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--宽是match_parent高是0权重是1-->
    <style name="MZWLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--宽是0高是match_parent权重是1-->
    <style name="ZMWLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--宽是wrap_content高是0权重是1-->
    <style name="WZWLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--宽是0高是wrap_content权重是1-->
    <style name="ZWWLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--水平线性布局宽高wrap_content-->
    <style name="WWLayout.LinearLayoutHorizontal">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽高wrap_content-->
    <style name="WWLayout.LinearLayoutVertical">
        <item name="android:orientation">vertical</item>
    </style>
    <!--水平线性布局宽高match_parent-->
    <style name="MMLayout.LinearLayoutHorizontal">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽高match_parent-->
    <style name="MMLayout.LinearLayoutVertical">
        <item name="android:orientation">vertical</item>
    </style>

    <!--水平线性布局宽是match_parent高是wrap_content-->
    <style name="MWLayout.LinearLayoutHorizontal">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽是wrap_content高是match_parent-->

    <style name="MWLayout.LinearLayoutVertical">
        <item name="android:orientation">vertical</item>
    </style>
    <!--水平线性布局宽是match_parent高是wrap_content-->
    <style name="WMLayout.LinearLayoutHorizontal">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽是wrap_content高是match_parent-->
    <style name="WMLayout.LinearLayoutVertical">
        <item name="android:orientation">vertical</item>
    </style>
    <!--水平线性布局宽是宽是match_parent高是0权重是1-->
    <style name="MZWLayout.LinearLayoutHorizontal">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--水平线性布局宽是0高是match_parent权重是1-->
    <style name="ZMWLayout.LinearLayoutHorizontal">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽是宽是match_parent高是0权重是1-->
    <style name="MZWLayout.LinearLayoutVertical">
        <item name="android:orientation">vertical</item>
    </style>
    <!--垂直线性布局宽是0高是match_parent权重是1-->
    <style name="ZMWLayout.LinearLayoutVertical">
        <item name="android:orientation">vertical</item>
    </style>
    <!--水平线性布局宽是宽是wrap_content高是0权重是1-->
    <style name="WZWLayout.LinearLayoutHorizontal">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--水平线性布局宽是0高是wrap_content权重是1-->
    <style name="ZWWLayout.LinearLayoutHorizontal">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--垂直线性布局宽是宽是wrap_content高是0权重是1-->
    <style name="WZWLayout.LinearLayoutVertical">
        <item name="android:orientation">vertical</item>
    </style>
    <!--垂直线性布局宽是0高是wrap_content权重是1-->
    <style name="ZWWLayout.LinearLayoutVertical">
        <item name="android:orientation">vertical</item>
    </style>
    <!--Layout end-->


    <!--按钮  Widget.MaterialComponents.Button.UnelevatedButton-->
    <!--按钮  Widget.MaterialComponents.Button.TextBottom-->
