<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/ui_style_dp_16"
        android:background="@color/colorBlue2" />

    <LinearLayout style="@style/UiSimpleFormSingleLayoutStyle">

        <ImageView
            style="@style/UiSimpleItemIconPrefixStyle"
            android:src="@drawable/ic_baseline_dashboard_24" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            style="@style/UiSimpleItemIconSuffixStyle"
            android:src="@drawable/ic_baseline_dashboard_24" />
    </LinearLayout>

    <LinearLayout style="@style/UiSimpleFormSingleLayoutStyle">

        <ImageView
            style="@style/UiSimpleItemIconPrefixStyle"
            android:src="@drawable/ic_baseline_dashboard_24" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            style="@style/UiSimpleItemIconSuffixStyle"
            android:src="@drawable/ui_ic_arrow_right" />
    </LinearLayout>

    <LinearLayout style="@style/UiSimpleFormSingleLayoutStyle">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/more"
            style="@style/UiSimpleItemIconSuffixActionStyle"
            android:src="@drawable/ic_baseline_dashboard_24" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        style="@style/UiCardViewUseBg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ui_bg_action_color_surface" />

    <View
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="?colorSurface" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <LinearLayout style="@style/UiVariantsFormSingleLayoutStyle">

        <TextView
            style="@style/UiVariantsFormLabelTextStyle"
            android:text="姓名" />

        <EditText
            style="@style/UiVariantsFormEditTextSingleStyle"
            android:hint="请输入姓名" />
    </LinearLayout>

    <LinearLayout style="@style/UiVariantsFormSingleLayoutStyle">

        <TextView
            style="@style/UiVariantsFormLabelTextStyle"
            android:text="性别" />

        <TextView
            style="@style/UiVariantsFormEditTextSingleStyle"
            android:layout_marginEnd="@dimen/ui_style_dp_8"
            android:hint="请选择" />

        <ImageView
            style="@style/UiVariantsFormIconSuffixStyle"
            android:src="@drawable/ic_baseline_dashboard_24" />
    </LinearLayout>

    <LinearLayout style="@style/UiVariantsFormSingleLayoutStyle">

        <TextView
            style="@style/UiVariantsFormLabelTextStyle"
            android:text="性别" />

        <TextView
            style="@style/UiVariantsFormEditTextSingleStyle"
            android:layout_marginEnd="@dimen/ui_style_dp_8"
            android:hint="请选择" />

        <ImageView style="@style/UiVariantsFormMoreStyle" />
    </LinearLayout>

    <LinearLayout
        style="@style/UiVariantsFormMultipleLayoutStyle"
        android:layout_marginTop="1dp">

        <TextView
            style="@style/UiVariantsFormLabelTextStyle"
            android:text="内容" />

        <EditText
            style="@style/UiVariantsFormEditTextMultipleStyle"
            android:hint="请输入内容" />
    </LinearLayout>

    <LinearLayout
        style="@style/UiVariantsFormMultipleLayoutStyle"
        android:layout_marginTop="1dp">

        <TextView
            style="@style/UiVariantsFormLabelTextStyle"
            android:text="附件信息" />

        <LinearLayout style="@style/UiSimpleFormSingleLayoutStyle">

            <ImageView
                style="@style/UiVariantsFormIconPrefixStyle"
                android:src="@drawable/ic_baseline_dashboard_24" />

            <TextView
                style="@style/UiVariantsFormLabelTextStyle"
                android:text="点击添加附件" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>